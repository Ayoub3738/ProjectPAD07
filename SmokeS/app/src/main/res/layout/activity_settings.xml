<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ayoubelyaghmouri.smokes.SettingsActivity">

    <Button
        android:id="@+id/btnSelectTime"
        android:layout_width="329dp"
        android:layout_height="79dp"
        android:layout_below="@+id/text3"
        android:layout_centerHorizontal="true"
        android:layout_column="0"
        android:layout_row="2"
        android:text="@string/selecteer_tijd"
        tools:ignore="MissingConstraints,UnknownId"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAlgemeen"
        app:layout_constraintHorizontal_bias="0.516"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnVerwijder"
        app:layout_constraintVertical_bias="0.094" />

    <Button
        android:id="@+id/btnAlgemeen"
        android:layout_width="329dp"
        android:layout_height="79dp"
        android:text="@string/algemene_instellingen"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintVertical_bias="0.019" />

    <Button
        android:id="@+id/btnVerwijder"
        android:layout_width="329dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_red_dark"
        android:elevation="0dp"
        android:text="Verwijder gegevens"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ayoubelyaghmouri.smokes.MainActivity"
    tools:showIn="@layout/app_bar_main">

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welkom terug!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp" />

        <Button
            android:id="@+id/btnShowTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Selecteer Tijd"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="48dp"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/text3"
            android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnGetNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnShowTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:onClick="showAlert"
        android:text="Geef Notificatie" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ayoubelyaghmouri.smokes.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Hey 'Gebruiker'!"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

        <Button
            android:id="@+id/btnShowTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Selecteer Tijd"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="409dp"
            android:layout_below="@+id/text3"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnUpdateData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="updateTestData"
            android:text="update test data"
            android:layout_below="@+id/btnGetNotification"
            android:layout_alignStart="@+id/btnGetNotification"
            tools:layout_editor_absoluteY="457dp"
            tools:layout_editor_absoluteX="5dp" />

    <Button
        android:id="@+id/btnGetNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnShowTime"
        android:layout_below="@+id/btnShowTime"
        android:onClick="showAlert"
        android:text="Geef Melding"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="361dp" />
    </android.support.constraint.ConstraintLayout>



